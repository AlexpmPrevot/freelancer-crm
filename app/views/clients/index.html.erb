
<div class="container mt-5">
  <div class="row">
    <div class="row col-12 col-md-8 justify-content-around">
      <h1>Mes clients (<%= @clients.count %>)</h1>
      <% @clients.each do |client| %>
        <div class="card col-md-3 m-3" style="width: 24rem;">
          <div class="card-body">
            <h5 class="card-title"><%= client.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= client.interlocutor %></h6>
            <p class="card-text"><%= client.address %></p>
            <p class="card-text"><%= client.phone %></p>
            <%= link_to 'Details', client_path(client), class: "card-link btn btn-primary" %>
            <%= link_to 'Projets', projects_path, class: "card-link btn btn-primary" %>
          </div>
        </div>

      <% end %>

    </div>
    <div class="col-12 col-md-4">
      <%= render partial: 'new', locals: { client: @client } %>
    </div>

  </div>
</div>
